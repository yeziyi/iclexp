<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:dither="false">
            <solid android:color="@color/file_delete_btn_bg_color"/>

            <stroke android:width="1dip" android:color="@color/file_delete_btn_stroke_press_color" />

            <corners android:radius="2dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:dither="false">
            <solid android:color="@color/file_delete_btn_bg_color"/>

            <stroke android:width="1dip" android:color="@color/file_delete_btn_stroke_press_color" />

            <corners android:radius="2dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
    <item>
        <shape android:dither="false">
            <solid android:color="@color/file_delete_btn_bg_color"/>

            <stroke android:width="1dip" android:color="@color/file_delete_btn_stroke_normal_color" />

            <corners android:radius="2dip" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
     </item>

</selector>